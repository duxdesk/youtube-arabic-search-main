{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",  // <-- Fixes TS6142: Enables JSX/TSX parsing

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases for Shadcn/Vite */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]  // <-- Fixes TS2307: Maps @/ to src/
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
